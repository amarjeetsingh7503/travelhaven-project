<% layout("/layouts/boilerplate") %>
<div class="login-form">
  <h3 class="mt-4 mb-4">Login To Your Account</h3>
  <hr />
  <div>
    <form method="post" action="/login" class="needs-validation" novalidate>
      <label for="username" class="form-label">Username</label>
      <div>
        <input
          type="text"
          name="username"
          placeholder="Enter your username"
          class="form-control focus-ring focus-ring-danger py-1 px-1 ps-2"
          required
        />
        <div class="invalid-feedback">Please enter your username.</div>
      </div>
      <br />

      <div>
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter your password"
          class="form-control focus-ring focus-ring-danger py-1 px-1 ps-2"
          required
        />
        <div class="invalid-feedback">Please enter your password.</div>
      </div>
      <br />
      <button type="submit" class="btn btn-danger btn-md btn-new-list">
        Login
      </button>
    </form>
    <p class="mt-2">New user? <a href="/signup">SignUp</a></p>
  </div>
</div>
