<% layout("/layouts/boilerplate") %>
<div class="signup-form">
  <h3 class="mt-4 mb-4">SignUp to TravelHaven</h3>
  <hr />
  <div>
    <form method="post" action="/signup" class="needs-validation" novalidate>
      <label for="username" class="form-label">Username</label>
      <div>
        <input
          type="text"
          name="username"
          placeholder="Enter username"
          class="form-control focus-ring focus-ring-danger py-1 px-1 ps-2"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please choose a username.</div>
      </div>
      <br />

      <div>
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          placeholder="Enter your email"
          class="form-control focus-ring focus-ring-danger py-1 px-1 ps-2"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a valid email.</div>
      </div>
      <br />

      <div>
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          placeholder="Enter your password"
          class="form-control focus-ring focus-ring-danger py-1 px-1 ps-2"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a password.</div>
      </div>
      <br />
      <button type="submit" class="btn btn-danger btn-md btn-new-list">
        SignUp
      </button>
    </form>
    <p class="mt-2">Already a user? <a href="/login">Log in</a></p>
  </div>
</div>
